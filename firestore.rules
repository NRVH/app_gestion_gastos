rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function: Solo verificar que el usuario est√© autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Reglas simplificadas para uso personal (sin restricciones)
    // Cualquier usuario autenticado tiene acceso total
    
    // Households collection
    match /households/{householdId} {
      // Permisos totales para cualquier usuario autenticado
      allow read, write: if isAuthenticated();
      
      // Members subcollection
      match /members/{memberId} {
        // Permisos totales para cualquier usuario autenticado
        allow read, write: if isAuthenticated();
      }
      
      // Categories subcollection
      match /categories/{categoryId} {
        // Permisos totales para cualquier usuario autenticado
        allow read, write: if isAuthenticated();
      }
      
      // Expenses subcollection
      match /expenses/{expenseId} {
        // Permisos totales para cualquier usuario autenticado
        allow read, write: if isAuthenticated();
      }
      
      // Contributions subcollection
      match /contributions/{contributionId} {
        // Permisos totales para cualquier usuario autenticado
        allow read, write: if isAuthenticated();
      }
      
      // Month history subcollection
      match /months/{monthId} {
        // Permisos totales para cualquier usuario autenticado
        allow read, write: if isAuthenticated();
      }
    }
  }
}
